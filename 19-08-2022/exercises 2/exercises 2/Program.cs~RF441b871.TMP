            if(num1 > num3)
            {
                if (num1 > num2)
                {
                    Console.Write("1st number is greatest");
                }
                else
                {
                    Console.Write("3rd number is greatest");
                }
            }
            else if (num2 > num3)
                Console.Write("2nd number is greatest");
            else
                Console.Write("3rd number is greatest");

        }
